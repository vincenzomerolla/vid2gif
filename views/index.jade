extends layout

block content
  div.home(ng-controller="MainController as main" flow-init)
    h1= title
    div(flow-init="main.init", flow-files-submitted="$flow.upload()", flow-file-added="!!{mp4:1}[$file.getExtension()]")
      .drop(flow-drop, flow-drag-enter="main.dragClassName = 'drag-enter'", flow-drag-leave="main.dragClassName = ''", ng-class="main.dragClassName")
        div  
          span.btn.btn-default(flow-btn) Upload File
          strong  OR 
          | Drag And Drop your file here 
        .text-right 
          small *only .mp4 files supported
      div(ng-repeat="file in $flow.files")
        | {{file.relativePath}} ({{file.size}} bytes)
        .progress.progress-striped(ng-class="{active: file.isUploading()}")
          .progress-bar(role="progressbar", aria-valuenow="{{file.progress() * 100}}", aria-valuemin="0", aria-valuemax="100", ng-style="{width: (file.progress() * 100) + "%"}")
            span.sr-only {{file.progress()}}% Complete     
        .btn-group
          button.btn.btn-xs.btn-warning(ng-click="file.pause()", ng-show="!file.paused && file.isUploading()") Pause    
          button.btn.btn-xs.btn-warning(ng-click="file.resume()", ng-show="file.paused") Resume       
          button.btn.btn-xs.btn-danger(ng-click="file.cancel()") Cancel        
          button.btn.btn-xs.btn-info(ng-click="file.retry()", ng-show="file.error") Retry
